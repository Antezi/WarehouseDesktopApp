<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="WarehouseDesktopApp.MessageBox"
        Title="MessageBox"
        Icon="Assets/Лого-диплом.ico"
        RequestedThemeVariant="Light">
    <Grid>
        <Border Margin="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Name="MessageTextBlock" FontWeight="Bold" TextWrapping="Wrap"/>
                    <Button Height="30" Width="50" CornerRadius="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Ок"
                            Name="OkButton" Click="OkButton_OnClick" FontWeight="Bold"/>
                </StackPanel>
        </Border>
    </Grid>
</Window>
